@page
@model McAttributes.Pages.Users.IndexModel

@{
    ViewData["Title"] = "User Accounts";
}

<h1>@ViewData["Title"]</h1>

<form method="post" asp-page="Index">
    <div class="form-group">
        <label asp-for="SearchCriteria">Search Criteria</label>
        <input asp-for="SearchCriteria" class="form-control" placeholder="Search" autocomplete="on" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.UserSet[0].LastFetched)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserSet[0].Merged)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserSet[0].Modified)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserSet[0].Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserSet[0].Enabled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserSet[0].Tenant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserSet[0].Upn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserSet[0].Mail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserSet[0].DisplayName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserSet[0].EmployeeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserSet[0].AdEmployeeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserSet[0].HrEmployeeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserSet[0].CreationType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserSet[0].Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserSet[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserSet[0].PreferredGivenName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserSet[0].PreferredSurname)
            </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.UserSet.Take(50)) {
        <tr>
            <td>
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastFetched)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Merged)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modified)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Enabled)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tenant)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Upn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdEmployeeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HrEmployeeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PreferredGivenName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PreferredSurname)
            </td>

        </tr>
}
    </tbody>
</table>
